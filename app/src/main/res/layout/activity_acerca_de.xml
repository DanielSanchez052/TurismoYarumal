<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcercaDe">

    <ImageView
        android:id="@+id/ivIconoAcerca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:src="@drawable/icono"

        app:layout_constraintVertical_bias="0.1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintVertical_bias="0"
        android:textSize="19dp"
        android:text="Nombre Creador: Daniel Sánchez Zapata"
        android:padding="10dp"

        app:layout_constraintTop_toBottomOf="@+id/ivIconoAcerca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvCelularContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintVertical_bias="0"
        android:textSize="22dp"
        android:text="Celular: 000 0000000"
        android:paddingBottom="10dp"

        app:layout_constraintTop_toBottomOf="@+id/tvNombre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintVertical_bias="0"
        android:textSize="22dp"
        android:text="Email: sanchezd0528@gmail.com"
        android:paddingBottom="10dp"

        app:layout_constraintTop_toBottomOf="@+id/tvCelularContacto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvDescripcionAcerca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintVertical_bias="0"
        android:textSize="22dp"
        android:text="Esto es una aplicación creada netamente para fines educativos"
        android:textAlignment="center"
        android:paddingBottom="10dp"

        app:layout_constraintTop_toBottomOf="@+id/tvEmail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>