<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".DetalleLugar">


    <ImageView
        android:id="@+id/ivImagenDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:src="@drawable/parque_principal"
        android:padding="5dp"
        app:layout_constraintVertical_bias="0.1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvTituloDetalleLugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="30dp"
        android:textStyle="bold"
        android:padding="5dp"
        android:textAlignment="center"

        android:text="Lugares de interes"

        app:layout_constraintTop_toBottomOf="@+id/ivImagenDetalle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tvDescripcionDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/parqueDescripcion"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"

        app:layout_constraintVertical_bias="0"
        android:padding="5dp"

        app:layout_constraintTop_toBottomOf="@+id/tvTituloDetalleLugar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvContactoDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:padding="2dp"
        android:textStyle="italic|bold"


        android:text="Contacto"

        app:layout_constraintHorizontal_bias="1"

        app:layout_constraintTop_toBottomOf="@+id/tvDescripcionDetalle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvDireccionDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:padding="2dp"
        android:textStyle="italic|bold"

        android:text="Direccion"

        app:layout_constraintHorizontal_bias="1"

        app:layout_constraintTop_toBottomOf="@+id/tvContactoDetalle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>