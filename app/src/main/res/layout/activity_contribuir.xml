<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contribuir"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/tituloContribuir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Contribuye con un lugar"
        android:textSize="28dp"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.05"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/spinerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:entries="@array/LugaresInteres"
        app:layout_constraintVertical_bias="0.05"

        android:text="Tipo de lugar"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tituloContribuir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tipoLugar"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Spinner
        android:id="@+id/tipoLugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.7"

        android:entries="@array/LugaresInteres"
        app:layout_constraintTop_toBottomOf="@id/tituloContribuir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    
    <EditText
        android:id="@+id/nombreLugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintVertical_bias="0.09"

        android:hint="Nombre del lugar"

        app:layout_constraintTop_toBottomOf="@id/tipoLugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <EditText
        android:id="@+id/descripcionLugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="6"
        android:maxLines="10"
        android:scrollbars="vertical"

        android:hint="Descripcion de el lugar"
        app:layout_constraintVertical_bias="0.09"

        app:layout_constraintTop_toTopOf="@id/nombreLugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <EditText
        android:id="@+id/contactoLugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintVertical_bias="0.09"
        android:hint="Contacto de el lugar"

        app:layout_constraintTop_toBottomOf="@id/descripcionLugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <EditText
        android:id="@+id/direccionLugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintVertical_bias="0.09"
        android:hint="Direccion del lugar"

        app:layout_constraintTop_toBottomOf="@id/contactoLugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/imagenLugar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/camera"

        app:layout_constraintVertical_bias="0.1"

        app:layout_constraintTop_toBottomOf="@id/direccionLugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/guardarLugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Lugar"

        app:layout_constraintTop_toBottomOf="@id/imagenLugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>